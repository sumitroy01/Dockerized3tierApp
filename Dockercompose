version: '3.8'

services:
  backend:
    build:
      context: ./backend
    container_name: backend
    ports:
      - "3000:3000"
    env_file:
      - .env  # Automatically loads all environment variables from the .env file
    networks:
      - 3T_bridge
    depends_on:
      - mongo
    restart: always

  frontend:
    build:
      context: ./frontend
    container_name: frontend
    ports:
      - "5000:5000"
    env_file:
      - .env  # Automatically loads all environment variables from the .env file
    networks:
      - 3T_bridge
    depends_on:
      - backend
    restart: always

networks:
  3T_bridge:
    external: true
